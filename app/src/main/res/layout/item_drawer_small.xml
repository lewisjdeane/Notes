<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_item_small_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <TextView
        android:id="@+id/item_drawer_small_top_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_drawer_small_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="left|center_vertical"
            android:scaleType="centerInside" />

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_drawer_small_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:gravity="left|center"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:textColor="#666"
            app:font="Roboto-Regular.ttf" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_drawer_small_bottom_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

</LinearLayout>